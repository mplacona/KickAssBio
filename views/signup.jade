extends layout

block content
	#account-form-container
		form( method="post")#account-form.form-horizontal.well.span6
			h1
			p#sub1.subheading Please tell us a little about yourself.
			hr
			fieldset
				#name-cg.control-group
					label.control-label(for='name-tf') Name
					.controls
						input#name-tf.input-xlarge(type='text', name='name').span4.required
				#email-cg.control-group
					label.control-label(for='email-tf') Email
					.controls
						input#email-tf.input-xlarge(type='text', name='email').span4.required
				p#sub2.subheading
				#user-cg.control-group
					label.control-label(for='user-tf') Username
					.controls
						input#user-tf.input-xlarge.disabled(type='text', name='user').span4.required
				#pass-cg.control-group
					label.control-label(for='pass-tf') Password
					.controls
						input#pass-tf.input-xlarge(type='password', name='pass').span4.required
				.form-actions
					button(type='submit')#account-form-btn2.btn.btn-primary
						i.icon-user.icon-white
						|Signup
						
block scripts
	script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
	script(src='http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.0/jquery.validate.js')
	script(type="text/javascript")
		$(document).ready(function(){
			$("#account-form").validate();
		});						