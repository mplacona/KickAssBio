extends layout

block content
	#account-form-container
		form( method="post")#account-form.form-horizontal.well.span6
			h1
			p#sub1.subheading Please tell us a little about yourself.
			hr
			fieldset
				#name-cg.control-group
					label.control-label(for='name-tf') Name
					.controls
						input#name-tf.input-xlarge(type='text', name='name')
				#email-cg.control-group
					label.control-label(for='email-tf') Email
					.controls
						input#email-tf.input-xlarge(type='text', name='email')
				p#sub2.subheading
				#user-cg.control-group
					label.control-label(for='user-tf') Username
					.controls
						input#user-tf.input-xlarge.disabled(type='text', name='user')
				#pass-cg.control-group
					label.control-label(for='pass-tf') Password
					.controls
						input#pass-tf.input-xlarge(type='password', name='pass')
				.form-actions
					button(type='submit')#account-form-btn2.btn.btn-primary
						i.icon-user.icon-white
						|Signup